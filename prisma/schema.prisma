generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  email         String        @unique
  password      String        @unique
  options       FlowOptions?
  logActiveDays LogActiveDay?
  createAt      DateTime      @default(now())
  updateAt      DateTime      @updatedAt
}

model FlowOptions {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int      @unique
  flowDuration  Int
  breakDuration Int
  sessionCount  Int
  createAt      DateTime @default(now())
  updateAt      DateTime @updatedAt
}

model LogActiveDay {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       Int      @unique
  sessionCount Int
  createAt     DateTime @default(now())
  updateAt     DateTime @updatedAt
}
